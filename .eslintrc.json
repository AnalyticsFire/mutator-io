{
  "extends": [
    "prettier",
    "prettier/standard"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "typescript",
    "prettier"
  ],
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-useless-constructor": "off",
    "new-cap": "off",
    "prettier/prettier": [
      "error", {
        "singleQuote": true,
        "semi": false,
        "parser": "typescript"
      }
    ]
  }
}
